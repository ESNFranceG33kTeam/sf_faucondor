<html>
<header>
    <meta charset="utf-8">
    <style>
        /******************* LOGIN **************************/
        html, body {
            height: 100%;
        }

        body{
            text-align:center;
            vertical-align:middle;
            background-color:white;
            background-repeat: no-repeat;
            -webkit-background-size: cover; /* pour anciens Chrome et Safari */
            background-size: cover; /* version standardis√©e */
            font-family: Magda;
        }

        .main {
            height: 100%;
            width: 100%;
            display: table;
        }

        .login-galaxy {
            display: table-cell;
            height: 100%;
            vertical-align: middle;
            color: white;
            margin: auto;
            font-size:xx-large;
        }

        p{
            color:rgb(122,193,67);
        }
        #login-button {
            background-color: rgb(222,0,126);
            padding: 10px;
            border-radius: 5px;
        }

        a#login-button{
            color: white;
        }
        a#login-button:link {
            text-decoration:none;
        }
        a#login-button:hover{
            background-color: rgb(122,193,67); /* VERT ESN */
        }
    </style>
</header>

<body class="main">

    {% if app.user %}
        <div class="login-galaxy">
            <div>
                <p>
                    <img src="{{ asset('bundles/faucondor/images/loader.gif') }}">
                    Connecting ...
                </p>
            </div>
        </div>
    {% else %}
        <div class="login-galaxy">
            <img src="{{ asset('bundles/faucondor/images/faucondor.jpg') }}" width="320" height="240"><br><br>
            <a id="login-button" href="{{ path('faucondor_login_check') }}">Login with Galaxy</a>
        </div>
    {% endif %}

</body>
</html>