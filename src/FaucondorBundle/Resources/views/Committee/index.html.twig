{% extends 'FaucondorBundle::layout.html.twig' %}

{% block content -%}
    <h1>{{ 'entity.committee.title'|trans }}</h1>
    <div class="tables">
        <table class="records_list datatable">
            <thead>
                <tr>
                    <th>{{ 'entity.committee.name'|trans }}</th>
                    <th>{{ 'entity.committee.createdat'|trans }}</th>
                    <th>{{ 'entity.section.actions'|trans }}</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('committee_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                    <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>
                        <a href="{{ path('committee_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil-square-o"></i></a>
                        <a href="{{ path('committee_delete', { 'id': entity.id }) }}"><i class="fa fa-trash-o"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
