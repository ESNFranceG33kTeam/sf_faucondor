{% extends 'FaucondorBundle::layout.html.twig' %}

{% block content -%}
    <h1>{{ 'label.contact.show'|trans }}</h1>

    <p>
        <a class="button" href="{{ path('contactlist_new') }}">{{ 'label.contact.new'|trans }}</a>
        <a class="button" href="{{ path('board_new') }}">{{ 'entity.user.new'|trans }}</a>
    </p>

    <div class="tables">
        <table class="table records_list datatable">
            <thead>
                <tr class=".firstColumn">
                    <th>{{ 'entity.user.firstname'|trans }}</th>
                    <th>{{ 'entity.user.lastname'|trans }}</th>
                    <th>{{ 'entity.user.mobile'|trans }}</th>
                    <th>{{ 'entity.user.email'|trans }}</th>
                    <th>{{ 'entity.section.actions'|trans }}</th>
                </tr>
            </thead>
            <tbody>
            {% for user in entity.users %}
                <tr>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.mobile }}</td>
                    <td>{{ user.email }}</td>
                    <td></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
