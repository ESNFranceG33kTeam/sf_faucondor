{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Points</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Points</th>
                <td>{{ entity.points }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Basicaction</th>
                <td>{{ entity.basicAction }}</td>
            </tr>
            <tr>
                <th>Receiver</th>
                <td>{{ entity.receiver }}</td>
            </tr>
            <tr>
                <th>Bonus</th>
                <td>{{ entity.bonus }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('points') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('points_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
