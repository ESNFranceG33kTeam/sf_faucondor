{% extends 'FaucondorBundle::layout.html.twig' %}

{% block content -%}
    <section>
        <h1>{{ 'entity.section.edit'|trans }}</h1>

        <div class="edit_boar">
            {{ form_start(edit_form) }}

            {{ form_row(edit_form.name) }}<br>
            {{ form_row(edit_form.joindate) }}<br>
            {{ form_row(edit_form.code) }}<br>
            {{ form_row(edit_form.country) }}<br>

            <input type="submit" value="{{ 'entity.board.update'|trans }}" class="button" />

            {{ form_end(edit_form) }}
        </div>

    </section>
{% endblock %}
