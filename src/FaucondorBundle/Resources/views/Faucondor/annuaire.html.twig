{% extends 'FaucondorBundle::layout.html.twig' %}

{% block content %}
    <div class="tables">
        <table class="users datatable">
            <thead>
            <tr class=".firstColumn">
                <th>{{ 'entity.user.firstname'|trans }}</th>
                <th>{{ 'entity.user.lastname'|trans }}</th>
                <th>{{ 'entity.user.mobile'|trans }}</th>
                <th>{{ 'entity.user.email'|trans }}</th>
                <th>{{ 'entity.user.post'|trans }}</th>
                <th>{{ 'entity.user.section'|trans }}</th>
            </tr>
            </thead>

            <tbody>
                {% for user in users %}
                    <tr>
                        <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.firstname }}</a></td>
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.mobile }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            {% spaceless %}
                                {% for post in user.getAnnuairePosts(constant('\\FaucondorBundle\\Entity\\Post::LOCAL')) %}
                                        {{ post }}
                                    {% if not loop.last %}<br>{% endif %}
                                {% endfor %}
                            {% endspaceless %}
                        </td>
                        <td>{{ user.section }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}