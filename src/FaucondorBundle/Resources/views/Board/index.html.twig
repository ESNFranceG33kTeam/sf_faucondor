{% extends 'FaucondorBundle::layout.html.twig' %}

{% block content -%}
    <h1>{{ 'label.menu.board'|trans }}</h1>

    <p>
        <a class="button" href="{{ path('board_new') }}">{{ 'entity.board.new'|trans }}</a>
    </p>

    <div class="tables">
        <table class="sections datatable">
            <thead>
                <tr class=".firstColumn">
                    <th>{{ 'entity.user.firstname'|trans }}</th>
                    <th>{{ 'entity.user.lastname'|trans }}</th>
                    <th>{{ 'entity.user.email'|trans }}</th>
                    <th>{{ 'entity.user.mobile'|trans }}</th>
                    <th>{{ 'entity.user.post'|trans }}</th>
                    <th>{{ 'entity.section.actions'|trans }}</th>
                </tr>
            </thead>
            <tbody>
            {% for user in board_members %}
                <tr>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td><a href="{{ path('board_show', { 'id': user.id }) }}">{{ user.email }}</a></td>
                    <td>{{ user.mobile }}</td>
                    <td>
                        {% spaceless %}
                            {% for post in user.posts %}
                                {{ post }}
                                {% if not loop.last %},{% endif %}
                            {% endfor %}
                        {% endspaceless %}
                    </td>
                    <td>
                        <a href="{{ path('board_edit', { 'id': user.id }) }}"><i class="fa fa-pencil-square-o"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
